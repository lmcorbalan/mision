<%- model_class = Producto -%>
<% content_for :cart_menu do %>
  <%= render 'carts/menu' %>
<% end %>

<% if can? [:manage], Producto %>
    <div class="navbar navs-fixed">
        <%= link_to t('.new', :default => t("helpers.links.new")),
                    new_producto_path,
                    :class => 'btn btn-primary' if can? :manage, Producto %>
    </div>
<% end %>

<div id="productos" class="row list-group" ng-controller="ProductosController as ProductosCtrl">
    
    <div class="item col-xs-4 col-lg-4" ng-repeat="producto in ProductosCtrl.productos">
      <div class="thumbnail">
        <div class="list-group-image text-center">
          <a href="" onclick="return false;" data-toggle="popover" data-container="body" data-content="{{ producto.descripcion }}" >
            <img ng-src="{{ producto.imagen.url }}" style="width:180px;height:180px;" width="180" height="180" class="group" />
          </a>
        </div>
        <div class="caption red text-center left">
          <h4 class="group inner list-group-item-heading">{{ producto.nombre }}</h4>
        </div>
        <div class="col-lg-12">
          <p class="precio brown text-center">precio misi√≥n {{ producto.precio | currency:"$" }}</p>
        </div>
        <div class="col-lg-12 v-center">
          <p class="precio-super red text-center">Precio hiper {{ producto.precio_super | currency:"$" }}</p>
        </div>
        <div class="col-lg-12">
          <p class="ahorro brown text-center">ahorro {{ producto.ahorro | number:2 }}%</p>
        </div>
      </div>
    </div>


</div>

<script type="text/javascript">
  $(function () {
    $('[data-toggle="popover"]').popover()
  })
</script>